<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            style="@style/WhiteBoldText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="주문 번호"
            android:id="@+id/textView11"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            style="@style/WhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="160404-11657"
            android:id="@+id/orderNumber"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            style="@style/WhiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 완료"
            android:id="@+id/orderStatus"
            android:layout_alignTop="@+id/orderNumber"
            android:layout_toRightOf="@+id/orderNumber"
            android:layout_toEndOf="@+id/orderNumber"
            android:layout_marginLeft="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="수거 시간"
            android:id="@+id/textView17"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="배달 시간"
            android:id="@+id/textView18"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView17"
            android:layout_alignRight="@+id/textView17"
            android:layout_alignEnd="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-05 18:30"
            android:id="@+id/pickUpTime"
            android:layout_alignTop="@+id/textView17"
            android:layout_toRightOf="@+id/textView17"
            android:layout_toEndOf="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-08 18:30"
            android:id="@+id/dropOffTime"
            android:layout_alignTop="@+id/textView18"
            android:layout_toRightOf="@+id/textView18"
            android:layout_toEndOf="@+id/textView18" />

        <Button
            style="@style/WhiteBoldText"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="상세내역"
            android:id="@+id/showDetail"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:layout_alignTop="@+id/pickUpTime"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white_gray" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총계 18,000원"
            android:id="@+id/price"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="90dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드 결제"
            android:id="@+id/paymentMethod"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

</LinearLayout>